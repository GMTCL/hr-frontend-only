{
  "rewrites": [
    {
      "source": "/",
      "destination": "/th/"
    },
    {
      "source": "/th/(.*)",
      "destination": "/th/$1"
    },
    {
      "source": "/en/(.*)",
      "destination": "/en/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}